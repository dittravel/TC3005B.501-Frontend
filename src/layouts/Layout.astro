---
/**
* Layout
* 
* This is the main layout component for the application. It defines the basic HTML structure
* and includes global styles.
* The title of the page can be set via props, and the main content is rendered through a slot.
*/

import '@styles/global.css' 

interface Props {
  title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="generator" content={Astro.generator} />
  <title>{title}</title>
</head>
<body>
  <slot />
</body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
