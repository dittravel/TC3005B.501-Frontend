---
/**
 * Applicant view of the dashboard
 */

import Button from "@components/Button";
import TextHeader from "@components/TextHeader.astro";
import CancelRequestModal from "@components/CancelRequestModal.tsx";

import { getCookie } from "@data/cookies";
import { apiRequest } from '@utils/apiClient';

// Color for each request status
const colorDesign: { [key: string]: string } = {
  'Primera Revisión': "text-alert-400",
  'Segunda Revisión': "text-alert-400",
  'Cotización del Viaje': "text-alert-400",
  'Atención Agencia de Viajes': "text-alert-400",
  'Comprobación gastos del viaje': "text-primary-500",
  'Validación de comprobantes': "text-primary-500",
};

// Get user ID from cookies
const user_id = getCookie("id", Astro.cookies);

// Get user requests
const requests = await (async () => {
  try {
    // Try to fetch requests with error handling
    try {
      const allRequests = await apiRequest(`/applicant/get-user-requests/${user_id}`, {
        cookies: Astro.cookies
      });
      return allRequests.filter((request: any) => request.status !== "Borrador");
    } catch (apiError) {
      // If there's an SSL error, show empty requests instead of breaking the page
      console.error("Error fetching requests:", apiError);
      return [];
    }
  } catch (error) {
    console.error("Error in request handling:", error);
    return [];
  }
})();

// Get username from astro props
const { userName } = Astro.props;
---

<div>
  <main>
    {/* Header */}
    <TextHeader
      title={`Bienvenido, ${userName}`}
      subtitle="Ditta Consulting"
    />

    <section>
      {/* Title */}
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-xl font-bold text-text-primary">
          Viajes en Proceso
          <span class="px-2 align-middle text-primary-500">({requests.length})</span>
        </h2>
        <a href="/crear-solicitud">
          <Button variant="filled" color="secondary" size="custom" customSizeClass="py-2 px-4 text-base font-bold">
            Solicita un nuevo viaje
          </Button>
        </a>
      </div>

      {/* Request list */}
      {requests.length > 0 ? (
        <div class="space-y-6">
          {requests.map((request: any) => {
            const isEditable = request.status === "Primera Revisión";
            const isNotCancelable = request.status === "Comprobación gastos del viaje" || request.status === "Validación de comprobantes";
            const mustBeChecked = request.status === "Comprobación gastos del viaje";
            return (
              <div class="content-wrapper">
                <div class="grid grid-cols-[1fr] md:grid-cols-[2fr_1fr] gap-8 md:gap-8">
                  <a href={`/detalles-solicitud/${request.request_id}`}>
                    <div>
                      <p class="font-bold text-lg wrap-break-words text-text-primary">#{request.request_id}</p>
                      <div class="text-sm text-text-primary grid grid-cols-[2fr_3fr] gap-y-1">
                        <p><span class="font-semibold">País Destino:</span> {request.destination_country}</p>
                        <p>
                          <span class="font-semibold">Estado:</span> 
                          <span class={`ml-1 font-semibold text-sm rounded bg-yellow ${colorDesign[String(request.status)]}`}>
                            {(request.status ? request.status.toUpperCase() : '')}
                          </span>
                        </p>
                        <p><span class="font-semibold">Fechas:</span> {request.beginning_date} - {request.ending_date}</p>
                        <p><span class="font-semibold">Responsable:</span> Eduardo Porto Morales</p>
                      </div>
                    </div>
                  </a>
                  <div class="flex flex-col gap-2">
                  <a href={`/editar-solicitud/${request.request_id}`} class="w-full">
                    <Button color="secondary" disabled={!isEditable} variant="filled" size="medium" customSizeClass="w-full">
                      Editar
                    </Button>
                  </a>
                  <a href={`/comprobar-solicitud/${request.request_id}`} class="w-full">
                    <Button color="secondary" disabled={!mustBeChecked} variant="filled" size="medium" customSizeClass="w-full">
                      Comprobar Gastos
                    </Button>
                  </a>
                  <CancelRequestModal
                    client:only="react"
                    id={request.request_id}
                    disabled={isNotCancelable}
                    token={getCookie("token", Astro.cookies) || ""}
                  >
                    <Button color="warning" disabled={isNotCancelable} variant="filled" size="medium" customSizeClass="w-full">
                      Cancelar
                    </Button>
                  </CancelRequestModal>
                </div>
                </div>
              </div>
            );
          })}
        </div>
      ) : (
        <div class="bg-card p-6 rounded-lg shadow w-full text-center text-text-secondary font-semibold">
          No tienes viajes agendados
        </div>
      )}
    </section>

  </main>
</div>