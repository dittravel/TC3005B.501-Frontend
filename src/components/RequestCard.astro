---
/**
 * Author: Eduardo Porto Morales
 * 
 * Card component for displaying request information.
 */

const { request, urlBase, subtitle } = Astro.props;
---

<a href={`/${urlBase}/${request.request_id}`}>
  <div class="content-wrapper">
    <div class="mb-4">
      <p class="text-lg font-semibold text-text-primary">Viaje Rumbo a {request.destination_country}</p>
      <p class="text-sm text-text-secondary">{subtitle}</p>
    </div>

    <div class="grid grid-cols-[2fr_1fr] text-sm text-text-primary">
      <div class="flex flex-col justify-between min-h-16">
        <div>
          <span class="inline font-medium text-text-secondary">Del:</span> 
          <p class="inline">{request.beginning_date}</p>
          <span class="inline font-medium text-text-secondary ml-2">al:</span> 
          <p class="inline">{request.ending_date}</p>
        </div>
        <p class="text-xs text-text-secondary">Estado actual: {request.request_status}</p>
      </div>
      <div class="flex flex-col justify-end items-end text-right">
        <p class="text-sm">
          <span class="font-medium text-text-secondary">Solicitud:</span> 
          <strong>#{request.request_id}</strong>
        </p>
      </div>
    </div>
  </div>
</a>
