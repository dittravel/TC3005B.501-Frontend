---
/**
 * This component renders a fallback UI for when there are no pending requests to display in the table.
 * It provides a user-friendly message and a button to navigate back to the dashboard.
 */

import Button from "@components/Button";

interface Props {
  title?: string;
  message?: string;
  buttonText?: string;
  buttonLink?: string;
}

const {
  title = "¡Oops, no hay solicitudes pendientes!",
  message = "Actualmente no hay información disponible para mostrar.",
  buttonText = "Regresar al dashboard",
  buttonLink = "/dashboard",
} = Astro.props;
---

<div class="flex grow h-[calc(100vh-175px)] items-center justify-center px-4 py-12">
  <div class="max-w-lg w-full bg-card border border-border rounded-2xl p-10 text-center">
    <h1 class="text-3xl font-extrabold text-text-primary mb-4">{title}</h1>
    <p class="text-base text-text-secondary mb-6">{message}</p>
    <Button
      href={buttonLink}
      color="secondary"
      variant="filled"
      size="medium"
      client:only="react"
    >
      {buttonText}
    </Button>
  </div>
</div>
