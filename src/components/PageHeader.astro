---
/**
 * Author: Julia Maria Stephanie Duenkelsbuehler Castillo
 * 
 * This component is a header for our system.
 * 
 * Example usage:
 * 	<PageHeader
 *    userName="John Doe"
 *		buttonLabel="Admin"
 *    showNotifications={true}
 *  />
 */

const { userName, buttonLabel, showNotifications = false } = Astro.props;
import MaterialIcon from "@components/MaterialIcon.astro";
import UserMenu from "@components/UserMenu.tsx";
import ThemeButton from "./ThemeButton.astro";
import MenuButton from "./MenuButton.astro";
import NotificationsButton from "./NotificationsButton.astro";
---

<header class="h-15 flex justify-between items-center bg-header-bg px-4 py-3 border-b border-border">
  <!-- Left Section -->
  <div class="h-15 flex items-center px-5 gap-4">
    <MenuButton client:load />
    <img
      src="/logo_texto_dittravel_blanco.png"
      class="w-auto h-full rounded drop-shadow-lg cursor-pointer hidden md:block"
      onclick="if(confirm('Â¿Volver al dashboard?')) window.location.href = '/dashboard'"
      title="Volver al dashboard"
      alt="Logo Dittravel"
    />
  </div>

  <!-- Right Section -->
  <div class="h-full flex items-center gap-4">

    <!-- Theme Toggle Button -->
    <ThemeButton client:load />

    <!-- User Role -->
    <span class="text-brand-200 font-bold text-sm">
      {buttonLabel}
    </span>

    <!-- User Info -->
    <UserMenu client:load>
      <span class="text-black">{userName}</span>
      <MaterialIcon icon="account_circle" color="black" />
    </UserMenu>

    <!-- Notifications Button -->
    {showNotifications && <NotificationsButton client:load />}
  </div>
</header>